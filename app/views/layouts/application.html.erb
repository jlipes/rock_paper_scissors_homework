      <div class="panel-heading">
        <h5 class="panel-title">Summary</h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td><%= @you_played_rock_and_won%></td>
          <td><%= @you_played_rock_and_lost %></td>
          <td><%= @you_played_rock_and_tied %></td>
        </tr>

        <tr>
          <td>paper</td>
          <td><%= @you_played_paper_and_won%></td>
          <td><%= @you_played_paper_and_lost%></td>
          <td><%= @you_played_paper_and_tied%></td>
        </tr>

        <tr>
          <td>scissors</td>
          <td><%= @you_played_scissors_and_won%></td>
          <td><%= @you_played_scissors_and_lost%></td>
          <td><%= @you_played_scissors_and_tied%></td>
        </tr>

        <tr>
          <th>Total</th>
          <th><%= @you_won%></th>
          <th><%= @you_lost%></th>
          <th><%= @you_tied%></th>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (<%= @total_entries%>)
        </h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>User Move</th>
          <th>Computer Move</th>
          <th>User Wins</th>
          <th>Computer Wins</th>
          <th>Tie</th>
        </tr>

        <% if @data.nil? %>
          <tr>
          </tr>
        <% else %>
            <% @data.each do |s| %>
              <tr>
